<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <%- stylesheetLinkTag('bootstrap', 'application', 'app','bootstrap-responsive') %>
    <%- javascriptIncludeTag('jquery.min', 'bootstrap', 'rails', 'application', 'base64', 'canvas2image', 'app') %>
    <%- csrfMetaTag() %>
    <meta charset="utf8">
    <meta name="viewport" content="initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0">
  </head>
  <body>
    <header>
      <div class="navbar navbar-inverse">
        <div class="navbar-inner">
          <a class="brand" href="/">
            <img class="logo" src="/images/logo.png" alt="TWINSTagram">
            <span>TWINSTagram</span>
          </a>
          <ul class="nav">
          </ul>
        </div>
      </div>
    </header>
    

    <div class="container">
        <% var flash = request.flash('info').pop(); if (flash) { %>
            <div class="alert alert-info">
                <a class="close" data-dismiss="alert">×</a>
                <%- flash %>
            </div>
        <% } %>

        <% flash = request.flash('error').pop(); if (flash) { %>
            <div class="alert alert-error">
                <a class="close" data-dismiss="alert">×</a>
                <%- flash %>
            </div>
        <% }; %>

        <%- body %>

    </div>
  </body>
</html>

<%- contentFor('javascripts') %>
